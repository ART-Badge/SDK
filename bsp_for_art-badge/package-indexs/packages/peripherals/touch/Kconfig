        source "$PKGS_DIR/packages/peripherals/touch/ft6206/Kconfig"
        source "$PKGS_DIR/packages/peripherals/touch/ft5426/Kconfig"
        source "$PKGS_DIR/packages/peripherals/touch/ft6236/Kconfig"		
    endif
