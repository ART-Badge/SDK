
# BC26 AT device configuration
menuconfig AT_DEVICE_USING_BC26
    bool "Quectel BC26"
    default n

if AT_DEVICE_USING_BC26

    config AT_DEVICE_BC26_INIT_ASYN
        bool "Enable initialize by thread"
        default n

    config AT_DEVICE_BC26_SAMPLE
        bool "Enable sample"
        default y

    if AT_DEVICE_BC26_SAMPLE

        config BC26_SAMPLE_POWER_PIN
            int "Power pin"
            default -1

        config BC26_SAMPLE_STATUS_PIN
            int "Power status pin"
            default -1

        config BC26_SAMPLE_CLIENT_NAME
            string "AT client device name"
            default "uart2"

        config BC26_SAMPLE_RECV_BUFF_LEN
            int "The maximum length of receive line buffer"
            default 512

    endif

endif
