
# Kconfig file for package helix
menuconfig PKG_USING_HELIX
    bool "The Helix MP3 Decoder."
    default n

if PKG_USING_HELIX

    config PKG_HELIX_PATH
        string
        default "/packages/multimedia/helix"

    choice
        prompt "version"
        help
            Select the helix version
        config PKG_USING_HELIX_V100
            bool "v1.0.0"

        config PKG_USING_HELIX_LATEST_VERSION
            bool "latest"

    endchoice

    if PKG_USING_HELIX_V100
        config PKG_HELIX_VER
        string
        default "v1.0.0"
    endif

    if PKG_USING_HELIX_LATEST_VERSION
       config PKG_HELIX_VER
       string
       default "latest"
    endif

endif

